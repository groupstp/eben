{
  "name": "objectView",
  "description": "Class for object view",
  "common": "object",
  "methods": {
    "query": {
      "description": "Осущестляет запрос к одному из объектов.",
      "type": "object",
      "parameters": [
        {
          "name": "object",
          "type": "text",
          "description": "объект, к которому идет обращение"
        },
        {
          "name": "method",
          "type": "text",
          "description": "Вызываемый у объекта метод"
        },
        {
          "name": "parameters",
          "type": "object",
          "description": "Передаваемые в метод параметры"
        }
      ]
    },
    "getInterface": {
      "description": "Возвращает информацию об объектах предметной области.",
      "type": "object"
    },
    "delObject": {
      "description": "Удаляет описание объекта(ов) из хранилища.",
      "type": "text",
      "parameters":[
        {
          "name": "filter",
          "type": "object",
          "description": "Фильтр на выборку записей из хранилища"
        },
        {
          "description": "Информация о связи объектов (для восстановления взаимосвязи полей в списках fields и filter)",
          "name": "objInfo",
          "type": "object"
        }
      ]
    },
    "addObject": {
      "description": "Добавляет описание объекта(ов) в хранилище.",
      "type": "text",
      "parameters" : [
        {
          "name": "values",
          "type": "object",
          "description": "Набор новых значений"
        }
      ]
    },
    "get": {
      "description": "Возвращает описание объектов по фильтру",
      "type": "object",
      "parameters":[
        {
          "description": "Список полей для отображения",
          "name": "fields",
          "type": "object"
        },
        {
          "description": "Фильтр на выборку записей из хранилища",
          "name": "filter",
          "type": "object"
        },
        {
          "description": "Дополнительные параметры (пагинация, порядок выдачи)",
          "name": "parameters",
          "type": "object"
        },
        {
          "description": "Информация о связи объектов (для восстановления взаимосвязи полей в списках fields и filter)",
          "name": "objInfo",
          "type": "object"
        }
      ]
    }
  }
}