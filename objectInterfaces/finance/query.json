{
  "name": "query",
  "description" : "Заявка",
  "common": "reference",
  "fields": {
    "ID": {
      "type": "uuid",
      "isPrimary": true,
      "readonly": true
    },
    "usersID":{
      "type": "link",
      "link": "finUsers",
      "title": "Создатель заявки"
    },
    "description": {
      "type": "string",
      "required": true,
      "title": "Описание"
    },
    "date": {
      "type": "date",
      "required": false,
      "title": "Дата создания"
    },
    "organizationID":{
      "type": "link",
      "link": "organization",
      "title": "Организация"
    },
    "subdivisionID":{
      "type": "link",
      "link": "subdivision",
      "title": "Подразделение"
    },
    "supplierID":{
      "type": "link",
      "link": "supplier",
      "title": "Поставщик"
    },
    "price":{
      "type": "float",
      "title": "Сумма"
    },
    "inBudget":{
      "type": "boolean",
      "title": "Наличие в бюджете"
    },
    "cash":{
      "type": "boolean",
      "title": "Наличный расчет"
    },
    "directorID": {
      "type": "link",
      "link": "finUsers",
      "title": "Согласовано (директор)"
    },
    "controlID": {
      "type": "link",
      "link": "finUsers",
      "title": "Согласовано (УК)"
    },
    "stage": {
      "type": "string",
      "title": "Статус"
    },
    "commentary":{
      "type": "string",
      "title": "Комментарий"
    },
    "workOut":{
      "type":"boolean",
      "title":"In work"
    }
  },
  "methods":{
    "active": {
      "description" : "Запускает заявку на обработку",
      "type": "text",
      "parameters":[
        {
          "name": "filter",
          "type": "object",
          "description": "Фильтр на выборку записей из хранилища"
        },
         {
           "description": "Дополнительные параметры (пагинация, порядок выдачи)",
           "name": "parameters",
           "type": "object"
         },
        {
          "description": "Информация о связи объектов (для восстановления взаимосвязи полей в списках fields и filter)",
          "name": "objInfo",
          "type": "object"
        }
      ]
    },
    "deactive": {
      "description" : "Деактивирует заявку",
      "type": "text",
      "parameters":[
        {
          "name": "filter",
          "type": "object",
          "description": "Фильтр на выборку записей из хранилища"
        },
         {
           "description": "Дополнительные параметры (пагинация, порядок выдачи)",
           "name": "parameters",
           "type": "object"
         },
        {
          "description": "Информация о связи объектов (для восстановления взаимосвязи полей в списках fields и filter)",
          "name": "objInfo",
          "type": "object"
        }
      ]
    }
  }
}